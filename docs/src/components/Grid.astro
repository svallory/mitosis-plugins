---
interface Props {
  columns?: 2 | 3 | 4;
  gap?: 'sm' | 'md' | 'lg';
}

const { columns = 3, gap = 'md' } = Astro.props;

const gapSizes = {
  sm: '0.75rem',
  md: '1.25rem',
  lg: '2rem',
};
---

<div class="grid" style={`--columns: ${columns}; --gap: ${gapSizes[gap]}`}>
  <slot />
</div>

<style>
  .grid {
    display: grid;
    gap: var(--gap);
    grid-template-columns: 1fr;
  }

  @media (min-width: 640px) {
    .grid {
      grid-template-columns: repeat(min(var(--columns), 2), 1fr);
    }
  }

  @media (min-width: 1024px) {
    .grid {
      grid-template-columns: repeat(var(--columns), 1fr);
    }
  }
</style>
