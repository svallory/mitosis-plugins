---
const { dir, pagination } = Astro.locals.starlightRoute;
const { prev, next } = pagination;
const isRtl = dir === "rtl";
---

{
  (prev || next) && (
    <div class="pagination-links print:hidden" dir={dir}>
      {prev && (
        <a href={prev.href} rel="prev">
          <span class="link-label sl-flex">
            <svg aria-hidden="true" class={isRtl ? "rtl-flip" : ""} width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M19 12H5M5 12L12 19M5 12L12 5"/>
            </svg>
            {Astro.locals.t("page.previousLink")}
          </span>
          <span class="link-title">{prev.label}</span>
        </a>
      )}
      {next && (
        <a href={next.href} rel="next">
          <span class="link-label sl-flex">
            {Astro.locals.t("page.nextLink")}
            <svg aria-hidden="true" class={isRtl ? "rtl-flip" : ""} width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12H19M19 12L12 5M19 12L12 19"/>
            </svg>
          </span>
          <span class="link-title">{next.label}</span>
        </a>
      )}
    </div>
  )
}

<style>
  @layer opendocs {
    .pagination-links {
      border-top: 1px solid var(--sl-color-gray-5);
      display: flex;
      padding-top: 1.5rem;
    }

    a {
      display: flex;
      flex-direction: column;
      flex-grow: 1;
      text-decoration: none;

      &:is(:hover, :focus-visible) {
        .link-label {
          color: var(--sl-color-accent);
        }

        .link-title {
          color: var(--sl-color-white);
        }
      }

      &[rel="next"] {
        align-items: flex-end;
      }
    }

    .link-label {
      align-items: center;
      color: var(--sl-color-gray-3);
      font-size: var(--sl-text-sm);
      gap: 0.15rem;
    }

    .link-title {
      color: var(--sl-color-gray-2);
      font-weight: 600;
      margin-inline: 0.25rem;
    }

    .rtl-flip {
      transform: scaleX(-1);
    }
  }
</style>
