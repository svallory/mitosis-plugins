---
import type { HTMLAttributes } from 'astro/types';

interface Props extends Omit<HTMLAttributes<'a'>, 'title'> {
  title: string;
  description?: string;
}

const { title, description, ...attributes } = Astro.props;
---

<div class="sl-link-card">
  <span class="sl-flex stack">
    <a {...attributes}>
      <span class="title" set:html={title} />
    </a>
    {description && <span class="description" set:html={description} />}
  </span>
  <svg class="icon" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M3 8H13M13 8L8 3M13 8L8 13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
</div>

<style>
  @layer starlight.components {
    .sl-link-card {
      display: grid;
      grid-template-columns: 1fr auto;
      gap: 0.75rem;
      align-items: center;
      background: var(--sl-color-gray-6);
      border: 1px solid var(--sl-color-gray-5);
      border-radius: 1rem;
      padding: 1.25rem 1.5rem;
      position: relative;
      transition: all 0.3s ease;
    }

    /* Gradient border on hover */
    .sl-link-card::before {
      content: "";
      position: absolute;
      inset: 0;
      padding: 1px;
      background: var(--color-primary-gradient, linear-gradient(35.65deg, #3a1c71 -10.94%, var(--sl-color-accent) 61.04%, #ffca7b 133.01%));
      border-radius: inherit;
      mask:
        linear-gradient(#fff 0 0) content-box,
        linear-gradient(#fff 0 0);
      mask-composite: exclude;
      -webkit-mask-composite: xor;
      opacity: 0;
      transition: opacity 0.3s ease;
      pointer-events: none;
    }

    .sl-link-card:hover::before {
      opacity: 1;
    }

    .sl-link-card:hover {
      transform: translateY(-2px);
    }

    a {
      text-decoration: none;
      line-height: var(--sl-line-height-headings);
    }

    /* a11y fix for clickable card */
    a::before {
      content: '';
      position: absolute;
      inset: 0;
    }

    .stack {
      flex-direction: column;
      gap: 0.375rem;
    }

    .title {
      color: var(--sl-color-white);
      font-weight: 600;
      font-size: 1.125rem;
    }

    .description {
      color: var(--sl-color-gray-2);
      line-height: 1.6;
      font-size: 0.9375rem;
    }

    .icon {
      color: var(--sl-color-gray-3);
      transition: all 0.2s ease;
      flex-shrink: 0;
    }

    /* Hover state */
    .sl-link-card:hover .icon {
      color: var(--sl-color-accent);
      transform: translateX(3px);
    }
  }
</style>
